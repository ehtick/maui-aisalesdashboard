<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:imageExtension="clr-namespace:SampleBrowser.Maui.Base.Converters;assembly=SampleBrowser.Maui.Base"
             x:Class="AISalesDashboard.SplashScreenView">

    <Border Background="{AppThemeBinding Light={StaticResource SalesDemoNavigationDrawerBackgroundColor}, Dark={StaticResource SalesDemoNavigationDrawerBackgroundColorDark}}" Stroke="Transparent">
        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="{OnPlatform Default=50, Android=30}">
            <Image Source="{AppThemeBinding Light={imageExtension:SfImageResource splashicon.png}, Dark={imageExtension:SfImageResource splashicondark.png}}" WidthRequest="{OnPlatform Default=200, Android=100}" HeightRequest="{OnPlatform Default=200, Android=100}"/>
        </VerticalStackLayout>
    </Border>
    
</ContentView>
